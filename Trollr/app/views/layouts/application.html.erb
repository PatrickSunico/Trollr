<!DOCTYPE html>
<html>
<head>
  <title>Trollr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <!-- if flash[:notice] is !not blank display a notice -->
  <% if !flash[:notice].blank? %>
    <%= flash[:notice] %>
  <% end %>

  <%= yield %>



</body>
</html>
